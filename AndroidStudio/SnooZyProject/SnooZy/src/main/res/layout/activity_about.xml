<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/AboutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/AboutHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title" />

        <LinearLayout
            style="@style/AboutCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_text_credits"
                style="@style/AboutCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_text_credits" />

            <TextView
                style="@style/AboutCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_text_usage" />

            <TextView
                android:id="@+id/about_text_usage_extra"
                style="@style/AboutCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_text_usage_extra" />
        </LinearLayout>

        <TextView
            android:id="@+id/about_footer_website"
            style="@style/AboutFooterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_footer_website" />

        <TextView
            android:id="@+id/about_project_version"
            style="@style/AboutFooterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_project_version" />

    </LinearLayout>
</ScrollView>
