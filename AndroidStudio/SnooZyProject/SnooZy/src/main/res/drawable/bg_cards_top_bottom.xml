<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/card_shadow_bottom_margin"
        android:left="@dimen/card_horizontal_margin"
        android:right="@dimen/card_horizontal_margin">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#11000000"
                android:centerY="98%"
                android:endColor="#00000000"
                android:startColor="#33000000" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/card_vertical_margin"
        android:left="@dimen/card_horizontal_margin"
        android:right="@dimen/card_horizontal_margin"
        >

        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/card_bottom_padding"
                android:left="@dimen/card_horizontal_padding"
                android:right="@dimen/card_horizontal_padding"
                android:top="@dimen/card_top_padding" />
            <solid android:color="@color/card_background" />
        </shape>
    </item>
</layer-list>
