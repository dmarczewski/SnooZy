<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:key="prefs_is_enabled"
        android:title="@string/prefs_is_enabled" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="prefs_is_enabled"
        android:key="prefs_has_notifications"
        android:title="@string/prefs_has_notifications_title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:dependency="prefs_is_enabled"
        android:key="prefs_has_vibration"
        android:title="@string/prefs_has_vibration_title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:dependency="prefs_is_enabled"
        android:key="prefs_has_sound"
        android:title="@string/prefs_has_sound_title" />

    <PreferenceCategory android:title="@string/prefs_category_advanced">
        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="prefs_is_enabled"
            android:key="prefs_on_screen_lock"
            android:summaryOff="@string/prefs_on_screen_lock_summary_off"
            android:summaryOn="@string/prefs_on_screen_lock_summary_on"
            android:title="@string/prefs_on_screen_lock_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="prefs_is_enabled"
            android:key="prefs_on_power_loss"
            android:summaryOff="@string/prefs_on_power_loss_summary_off"
            android:summaryOn="@string/prefs_on_power_loss_summary_on"
            android:title="@string/prefs_on_power_loss_title" />
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="@string/prefs_delay_dialog_title"
            android:entries="@array/prefs_delay_entries"
            android:entryValues="@array/prefs_delay_values"
            android:key="prefs_delay_to_lock"
            android:title="@string/prefs_delay_to_lock_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_category_cache">
        <ListPreference
            android:defaultValue="-1"
            android:dialogTitle="@string/prefs_cache_age_dialog_title"
            android:entries="@array/prefs_cache_entries"
            android:entryValues="@array/prefs_cache_values"
            android:key="prefs_cache_age"
            android:title="@string/prefs_cache_age_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_category_device_admin">
        <PreferenceScreen
            android:key="prefs_device_admin"
            android:summary="@string/prefs_device_admin_summary_enabled"
            android:title="@string/prefs_device_admin_title"></PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
